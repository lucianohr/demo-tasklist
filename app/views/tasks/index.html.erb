<h1><%= t('listing') %></h1>

<p>
   <%= link_to 'New Task', new_task_path %> |
   <%= link_to 'New Author', new_author_path %> |
   <%= link_to 'New Category', new_category_path %>
</p>
<table>
  <tr>
    <th>Description</th>
    <th>Status</th>
    <th>Author</th>
    <th>Category</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.author.name %></td>
    <td><%= task.category.name %></td>
    <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
    <td><%= link_to t('show'), task %></td>
    <td><%= link_to t('edit'), edit_task_path(task) %></td>
    <td><%= link_to t('destroy'), task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p>
   <%= link_to 'New Task', new_task_path %> |
   <%= link_to 'New Author', new_author_path %> |
   <%= link_to 'New Category', new_category_path %>
</p>
